@model Movie
@{
    ViewData["Title"] = Model.Title;
}

<div class="row mt-5 justify-content-between">
    <div class="col-md-3">
        <img src="data:image/jpg;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail" alt="Poster" />
    </div>
    <div class="col-md-8">
        <div class="d-flex justify-content-between mb-3">
            <h3>@Model.Title</h3>
            <span class="mt-2">
                <i class="bi bi-star-fill text-warning"></i>
                <span class="text-muted">
                    @Model.Rate.ToString("0.0")
                </span>
            </span>
        </div>
        <span class="text-muted" style="margin-right:8px;">
            <i class="bi bi-calendar-week"></i>
            @Model.Year
        </span>
        <span class="text-muted ">
            <i class="bi bi-film"></i>
            @Model.Genre.GenreName
        </span>
        <br />
        <br />
        <h5><i class="bi bi-play-btn"></i>  Video Poster</h5>
        <video controls width="820px" height="330px">
            <source src="data:video/mp4;base64,@(Convert.ToBase64String(Model.VideoPoster))" />
        </video>
        <br />
        <br />
        <h5>Story Line  :  </h5>
        <p class="text-justify mt-3">@Model.StoryLine</p>
        <a asp-action="Index"class="btn btn-danger mt-3"><i class="bi bi-x-circle"></i> Back To List</a>
    </div>
   
  
</div>
