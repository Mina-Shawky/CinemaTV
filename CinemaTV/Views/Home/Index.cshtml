@model IEnumerable<Movie>
@{
    ViewData["Title"] = "Home";
}
<h3 class="ipc">Top Movies   <i class="bi bi-film"></i></h3>
<div class="ipcdiv">TV shows and movies just for you</div>
<hr />
<div class="row mt-5">
    @foreach (var i in Model)
    {
        <div class="col-lg-3 col-md-5">

            <div class="card    image-container" style="width: 20.5rem; height:438px;">
                    <img src="data:image/jpg;base64,@(Convert.ToBase64String(i.Poster))" class="card-img-top" style="background-size:cover; height:400px;" alt="Poster" />
                
                @* <div class="text-overlay"><i class="bi bi-star-fill "></i> @i.Rate.ToString("0.0 ")</div> *@
                <div class="text-overlay">
                    <span class="imdb_rate">
                        <i class="bi bi-star-fill "></i> @i.Rate.ToString("0.0 ")
                    </span>
                    <span class="year">@i.Year</span>
                    <span class="quality">1080p HD</span>
                </div>

                <a asp-action="GetById" asp-controller="Home" asp-route-id="@i.Id" class="btn btn-success"><i class="bi bi-display-fill"></i> View</a>
            </div>

        </div>

    }
</div>
